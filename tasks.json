{
	"version": "2.0.0",
	"runner": "terminal",
	"type": "shell",
	"tasks": [
		{
			"label": "gcc compile",
			"command": "gcc",
			"args": ["${fileDirname}/*.c", "-o", "${fileDirname}/a.out", "-g"],
			"problemMatcher": ["$gcc"],
			"group": "build"
		},
		{
			"label": "execute",
			"command": "${fileDirname}/a.out",
			"group": "test"
		},
		{
			"label": "g++ compile",
			"command": "g++",
			"args": [
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/a.out",
				"-g"
			],
			"problemMatcher": ["$gcc"],
			"group": "build"
		}
	]
}
