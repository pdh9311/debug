{
	"version": "2.0.0",
	"runner": "terminal",
	"type": "shell",
	// "echoCommand": true,
	// "presentation": { "reveal": "always" },
	"tasks": [
		{
			"label": "CPP: g++ build",
			"command": "g++",
			"args": [
				"$(fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-g"
			],
			"problemMatcher": ["$gcc"],
			"group": "build"
		},
		{
			"label": "C: gcc build",
			"command": "gcc",
			"args": [
				"${fileDirname}/*.c",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-g"
			],
			"problemMatcher": ["$gcc"],
			"group": "build"
		},
		{
			"label": "execute",
			"command": "${fileDirname}/${fileBasenameNoExtension}",
			"group": "test"
		}
	]
}
